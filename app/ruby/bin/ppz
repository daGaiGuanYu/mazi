#!/usr/bin/env ruby

require_relative '../lib/ppz'
require_relative './common'
require 'fileutils'

file_in, file_out = PPZMain::Util.get_file_in_and_out

parser = PPZ::FileDocParser.new file_in
model = parser.get_model

PPZ::Func::write_to_file file_out, model.to_html
FileUtils.cp PPZMain::CSS_FILE_PATH, (Pathname(File.dirname file_out) + 'ppz.css')