html
  line-height 1.5
body, div, p, aside
  box-sizing border-box

body
  margin 0
  padding 0
  position relative

aside
  overflow-y auto
  padding: 2rem 1rem;

  position fixed
  top 0
  left 0
  width 188px
  height 100vh

  ul
    margin 0 0 0 1rem
    padding 0
    list-style none
  a
    width 100%
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

article
  margin-left: 188px
  padding: 1px 1rem
h1
  font-size 2rem
h2
  font-size 1.3rem
h3
  font-size 1.1rem
  opacity 0.9

h1, h2, h3
  &::before
    content '# '
    opacity 0.3
    font-size 1rem

.comment-container
  margin 1rem 0
  background rgba(0, 0, 0, 0.2)
  padding 1em
  font-size 0.9rem
  border-radius 4px
.comment-item
  opacity 0.8

.special-block
  margin 1rem 0
  padding 1rem
  white-space pre
  background #141c22
  overflow auto
  border-radius 4px
  color #eeeeee

.special-txt
  background rgba(27, 31, 35, 0.05)
  border-radius 4px
  font-size 0.9em
  padding 2px 4px